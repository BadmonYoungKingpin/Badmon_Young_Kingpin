<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".eventHomeActivity"
            android:label="@string/title_activity_event_list_pop"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".eventAddActivity"
            android:label="@string/title_activity_event_add"
            android:parentActivityName=".eventHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".eventHomeActivity" />
        </activity>

        <uses-permission android:name="android.permission.INTERNET" />

        <activity
            android:name=".todoHomeActivity"
            android:label="@string/title_activity_todo_home"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.myapplication.MainActivity" />
        </activity>
    </application>

</manifest>
