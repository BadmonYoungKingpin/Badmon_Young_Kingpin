<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#39B54A"
    tools:context="com.example.hp.myapplication.ViewEvent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/eventTitle"
            android:textSize="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/eventDate"
            android:layout_alignStart="@+id/eventDate"
            android:layout_marginTop="53dp"
            android:layout_alignRight="@+id/eventDate"
            android:layout_alignEnd="@+id/eventDate"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/eventDate"
            android:textSize="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/eventDesc"
            android:textSize="20dp"
            android:layout_below="@+id/eventDate"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <ImageButton
        android:layout_width="116dp"
        android:layout_height="103dp"
        android:id="@+id/backToE"
        android:background="@drawable/ono"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/deletE"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deletE"
        android:background="@drawable/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="backToEvents" />

</RelativeLayout>
